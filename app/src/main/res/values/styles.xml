<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="Profile">

    </style>

    <style name="Profile.Header" parent="Profile">
        <item name="android:textColor">@color/color_white_grey</item>

    </style>

    <style name="Profile.Header.Nickname" parent="Profile.Header">
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:fontFamily">sans-serif-medium</item>

    </style>

    <style name="Profile.Header.Rank">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Header.Metrics">
        <item name="android:textSize">@dimen/font_normal_16</item>
    </style>

    <style name="Profile.Header.Metrics.Value">
        <item name="android:textSize">@dimen/font_large_20</item>
        <item name="android:padding">@dimen/spacing_tiny_4</item>
        <item name="android:drawablePadding">@dimen/spacing_tiny_4</item>
    </style>

    <style name="Profile.InfoItem">
        <item name="android:paddingTop">@dimen/spacing_normal_16</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
        <item name="android:paddingRight">@dimen/spacing_normal_16</item>
        <item name="android:minHeight">72dp</item>
    </style>

    <style name="Profile.EditText" parent="Profile">
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:paddingTop">@dimen/spacing_tiny_4</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
        <item name="android:enabled">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:focusable">false</item>

    </style>

    <style name="Profile.EditText.Single">
        <item name="android:lines">1</item>
    </style>
    <style name="Profile.EditText.Multiline">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLength">128</item>
    </style>


</resources>